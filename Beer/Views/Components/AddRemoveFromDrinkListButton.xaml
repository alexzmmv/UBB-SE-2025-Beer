<UserControl
    x:Class="WinUIApp.Views.Components.AddRemoveFromDrinkListButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIApp.Views.Components">

    <Button x:Name="AddRemoveButton"
            Click="{x:Bind ViewModel.AddRemoveFromListAsync}"
            Style="{StaticResource DefaultButton}"
            Padding="10,5"
            Margin="5,0">
        <TextBlock x:Name="ButtonText"
                   Text="{x:Bind ViewModel.ButtonText, Mode=OneWay}"
                   FontSize="14" />
    </Button>

</UserControl>