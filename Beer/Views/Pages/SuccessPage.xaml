<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DrinkDb_Auth.SuccessPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrinkDb_Auth"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
            <SymbolIcon Symbol="Accept" 
                       Foreground="{ThemeResource SystemAccentColor}"
                       Height="100" Width="100"/>

            <TextBlock Text="Successfully Logged In!"
                     FontSize="32"
                     FontWeight="Bold"
                     HorizontalAlignment="Center"/>
            
            <TextBlock Text="Welcome to DrinkDb"
                     FontSize="24"
                     HorizontalAlignment="Center"/>
            
            <Button x:Name="ContinueButton"
                    Content="Continue to App"
                    Click="ContinueButton_Click"
                    Style="{ThemeResource AccentButtonStyle}"
                    Padding="24,12"
                    FontSize="16"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page> 