<Page
    x:Class="DrinkDb_Auth.UserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrinkDb_Auth"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Page-wide resource styles -->
    <Page.Resources>
        <!-- Default style for TextBlocks: black text, Segoe UI font -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- Style for Buttons: black text on white background -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <!-- Main layout grid with a white background -->
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT COLUMN: User Info Card -->
        <StackPanel 
            Grid.Column="0"
            Padding="20"
            Spacing="16"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <Border 
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">

                <StackPanel Spacing="12" HorizontalAlignment="Center">
                    <!-- Profile picture placeholder -->
                    <Ellipse Width="100" Height="100" Fill="Gray" />

                    <!-- Name & Username -->
                    <StackPanel Spacing="4" HorizontalAlignment="Center">
                        <TextBlock 
                            x:Name="NameTextBlock"
                            FontSize="24"
                            FontWeight="Bold" />
                        <TextBlock 
                            x:Name="UsernameTextBlock"
                            FontSize="16"
                            Foreground="DarkGray" />
                    </StackPanel>

                    <!-- Status text -->
                    <TextBlock 
                        x:Name="StatusTextBlock"
                        FontSize="16" />

                    <!-- Edit account button -->
                    <Button 
                        x:Name="AdminDashboardButton"
                        Content="Admin Dashboard"
                        Click="AdminDashboardButton_Click" />

                    <!-- Logout button -->
                    <Button 
                        x:Name="LogoutButton"
                        Content="Logout"
                        Click="LogoutButton_Click"
                        Background="White"
                        Foreground="Black"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- RIGHT COLUMN: Reviews & Drinklist -->
        <StackPanel 
            Grid.Column="1"
            Padding="20"
            Spacing="20"
            VerticalAlignment="Top">

            <!-- Reviews Section -->
            <TextBlock Text="Reviews" FontSize="20" FontWeight="Bold"/>
            <!-- We will add each review in code-behind -->
            <ItemsControl x:Name="ReviewsItemsControl" />

            <!-- Drinklist Section -->
            <TextBlock Text="Drinklist" FontSize="20" FontWeight="Bold"/>
            <!-- We will add each drink in code-behind -->
            <ItemsControl x:Name="DrinklistItemsControl" />
        </StackPanel>
    </Grid>
</Page>