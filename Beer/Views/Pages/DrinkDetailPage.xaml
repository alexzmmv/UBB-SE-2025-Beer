<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUIApp.Views.Pages.DrinkDetailPage"
    x:Name="DrinkDetailPageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIApp.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:components="using:WinUIApp.Views.Components"
    xmlns:votebutton="using:WinUIApp.Views.Components"
    xmlns:modals="using:WinUIApp.Views.Components.Modals"
    xmlns:data="using:WinUIApp.Models.Data"
    xmlns:dto="using:DataAccess.DTOModels"
    xmlns:converters="using:WinUIApp.Utils.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">

    <Page.Resources>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid
        HorizontalAlignment="Stretch"
           Padding="32,32,32,0" Background="{ThemeResource LayerFillColorDefaultBrush}">
        <ScrollViewer>
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Border CornerRadius="12">
                        <Image Source="{Binding Drink.DrinkImageUrl}"
                           x:Name="DrinkImage"
                           Width="200" Height="200" Stretch="UniformToFill" />
                    </Border>

                    <StackPanel Orientation="Vertical"
                   Margin="24,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                            <Border 
                            Width="48" 
                            Height="48"
                            Background="{ThemeResource AccentFillColorSecondaryBrush}" 
                            CornerRadius="8" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                            BorderThickness="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock FontSize="16"  TextAlignment="Center" FontWeight="Bold" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}">
                            <Run Text="{Binding AverageReviewScore}" />
                                    </TextBlock>
                            </Grid>
                        </Border>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left"
                               Margin="8,0,0,0">
                                <TextBlock Text="{Binding Drink.DrinkName}"
                                       HorizontalAlignment="Left"
                                       x:Name="Name" 
                                       FontSize="26" 
                                       FontWeight="Bold" 
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Spacing="8">
                                    <TextBlock Text="{Binding Drink.DrinkBrand.BrandName}" FontSize="14" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Drink.AlcoholContent}" FontSize="14" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="% Alcohol" FontSize="14" FontWeight="SemiBold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5 0 0">
                            <components:AddRemoveFromDrinkListButton DrinkId="{Binding Drink.DrinkId}" />

                            <components:UpdateDrinkButton x:Name="UpdateButton" Drink="{Binding Drink}" />
                            <Button x:Name="RemoveButton">
                                <Button.Flyout>
                                    <Flyout Placement="Bottom">
                                        <StackPanel>
                                            <TextBlock Text="Are you sure?" HorizontalAlignment="Center" />
                                            <Button x:Name="ConfirmRemoveButton" Click="ConfirmRemoveButton_Click" HorizontalAlignment="Center" Margin="0 5 0 0">Confirm</Button>
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                                <TextBlock x:Name="RemoveButtonText" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </Button>
                            <votebutton:VoteDrinkOfTheDayButton Tapped="VoteButton_Click" x:Name="VoteButton"  DrinkId="{Binding DrinkDTO.DrinkId}" />

                        </StackPanel>
                        <TextBlock Text="Categories" FontSize="18" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding Drink.CategoryList}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefault}" 
                                            Padding="14,4" CornerRadius="8" Width="auto" HorizontalAlignment="Left" 
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding CategoryName}" FontSize="14"  Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                    <Grid  Margin="0,16,0,0" HorizontalAlignment="Stretch" Width="Auto">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <FontIcon Glyph="&#xE90A;" Margin="0,0,8,0"/>
                            <TextBlock Text="Reviews" FontSize="24" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </StackPanel>

                        <Button Content="Add Review" Grid.Column="1" HorizontalAlignment="Right"
                            x:Name="ReviewButton"
                            Command="{x:Bind ViewModel.ShowPopupCommand, Mode=OneWay}"  Style="{StaticResource AccentButtonStyle}"
                            Margin="5,0" />
                    </Grid>
                    <Rectangle Height="1" Fill="{ThemeResource TextFillColorPrimaryBrush}" HorizontalAlignment="Stretch"
                               Margin="0,8,0,16"/>

                    <ItemsControl ItemsSource="{Binding Reviews}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="dto:ReviewDTO">
                                <Border BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="10" Margin="0 0 0 10" 
                        CornerRadius="8" >
                                    <Border.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Text="Flag Review" Click="FlagReviewMenuItem_Click"
                                                          Visibility="{Binding IsAdmin, ElementName=DrinkDetailPageRoot, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE7E7;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem Text="Hide Review" Click="HideReviewMenuItem_Click" 
                                                          Visibility="{Binding IsAdmin, ElementName=DrinkDetailPageRoot}">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE711;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem Text="AI Check" Click="AICheckMenuItem_Click"
                                                          Visibility="{Binding IsAdmin, ElementName=DrinkDetailPageRoot}">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE721;" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Border.ContextFlyout>
                                    <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                        <Border 
                                            Width="32" 
                                            Height="32"
                                            Background="{ThemeResource AccentFillColorSecondaryBrush}" 
                                            CornerRadius="8" 
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                            BorderThickness="1" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center">
                                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock FontSize="14"  TextAlignment="Center" FontWeight="SemiBold" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}">
                                                    <Run Text="{Binding RatingValue}" />
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                        <TextBlock Text="{Binding Content}" Foreground="{ThemeResource TextFillColorPrimaryBrush}" TextWrapping="WrapWholeWords" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <!-- add review modal -->
        <Grid x:Name="AddReviewModalOverlay"
            Visibility="Collapsed"          
               Background="#80000000"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Canvas.ZIndex="999">
            <modals:AddReviewModal x:Name="AddReviewModal"
                                   CloseRequested="CloseAddReviewModal" 
                                   RefreshReviewsRequested="RefreshReviews"
                                   DrinkId="{Binding Drink.DrinkId}"/>
        </Grid>
    </Grid>
</Page>