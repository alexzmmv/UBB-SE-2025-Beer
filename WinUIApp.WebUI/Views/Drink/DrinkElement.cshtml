@model WinUIApp.WebUI.Models.DrinkElementViewModel

<a asp-controller="Drink" asp-action="DrinkDetail" asp-route-id="@Model.Drink.DrinkId" class="text-decoration-none h-100">
    <div class="drink-card h-100">
        <div class="card-img-container">
            <img src="@Model.Drink.DrinkImageUrl" alt="@Model.Drink.DrinkName">
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Drink.DrinkName</h5>
            <div class="card-info">
                <div class="mb-2">
                    <i class="bi bi-tags me-1 text-muted"></i>
                    @for (int i = 0; i < Model.Drink.CategoryList.Count; i++)
                    {
                        @Model.Drink.CategoryList[i].CategoryName
                        if (i < Model.Drink.CategoryList.Count - 1)
                        {
                            <span>, </span>
                        }
                    }
                </div>
                <div class="mb-2">
                    <i class="bi bi-shop me-1 text-muted"></i>
                    @Model.Drink.DrinkBrand.BrandName
                </div>
                <div>
                    <i class="bi bi-percent me-1 text-muted"></i>
                    @Model.Drink.AlcoholContent.ToString()% ABV
                </div>
            </div>
        </div>
    </div>
</a>