@using WinUiApp.Data.Data
@model IEnumerable<User>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PasswordHash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TwoFASecret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDeletedReviews)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasSubmittedAppeal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedRole)
            </th>
        
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (User item in Model) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TwoFASecret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDeletedReviews)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasSubmittedAppeal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedRole)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
