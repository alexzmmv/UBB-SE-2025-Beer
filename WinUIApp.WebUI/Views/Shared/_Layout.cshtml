
@{
    Boolean isLoginPage =
         string.Equals(ViewContext.RouteData.Values["controller"]?.ToString(), "Auth", StringComparison.OrdinalIgnoreCase);
    String? assignedRole = Context.Session.GetString("AssignedRole");
    Boolean isAdmin = assignedRole == "Admin";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WinUIApp.WebUI</title>    <script type="importmap"></script>    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/modern-theme.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WinUIApp.WebUI.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<style>
    .navbar, .navbar-nav, .navbar-brand, .nav-link {
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
        letter-spacing: 0.01em;
    }

    .navbar {
        background: linear-gradient(90deg, #6A11CB 0%, #8E54E9 50%, #5691f5 75%,#2575FC 100%);
        box-shadow: 0 12px 32px 0 rgba(31, 38, 135, 0.18);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(16px);
        border-radius: 0.5rem;
        border: 0.5px solid rgba(255,255,255,0.18);
    }

    .logo-overlap {
        position: relative;
        display: flex;
        align-items: center;
        font-size: 1.7rem;
        padding-left: 1.5rem;
        font-weight: 700;
        font-family: 'Inter', Arial, Helvetica, sans-serif !important;
        letter-spacing: 0.05em;
    }

    .logo-icon {
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%) rotate(-15deg) scale(1.4);
        z-index: 2;
        pointer-events: none;
    }

    .icon-gradient {
        background: linear-gradient(90deg, #ffffff, #e0f7fa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
    }

    .logo-text {
        position: relative;
        z-index: 1;
        padding-left: 0.5rem;
        letter-spacing: 0.04em;
        font-weight: 700;
        font-family: 'Inter', Arial, Helvetica, sans-serif;
    }

    .text-gradient {
        background: linear-gradient(90deg, #ffffff, #e0f7fa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
        font-weight: 700;
    }

    .navbar-nav, .nav-link {
        position: relative;
        overflow: hidden;
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
        border-radius: 0.5rem;
    }

    .navbar-nav .nav-link::after {
        content: '';
        display: block;
        position: absolute;
        left: 50%;
        bottom: 0.3rem;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, #d1c4e9, #b39ddb);
        transition: width 0.3s, left 0.3s;
    }

    .navbar-nav .nav-link:hover::after {
        width: 80%;
        left: 10%;
    }

    
</style>
<body>
    <header>
        @if (!isLoginPage)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark shadow-sm mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand logo-overlap" asp-controller="HomePage" asp-action="Index">
                        <span class="logo-icon">
                            <i class="bi bi-cup-straw icon-gradient"></i>
                        </span>
                        <span class="logo-text fw-bold text-gradient">
                            IMDB Drinks
                        </span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item ms-4 me-3">
                                <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "HomePage" ? "active" : "")" asp-area="" asp-controller="HomePage" asp-action="Index">
                                    <i class="bi bi-house"></i> Home
                                </a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link text-white" asp-area="" asp-controller="FavoriteDrinks" asp-action="FavoriteDrinks">
                                    <i class="bi bi-heart"></i> My Favorites
                                </a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link text-white" asp-area="" asp-controller="Add" asp-action="Drink">
                                    <i class="bi bi-plus-circle"></i> Add Drink
                                </a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="nav-link text-white" asp-area="" asp-controller="Profile" asp-action="UserPage">
                                    <i class="bi bi-person"></i> Profile
                                </a>
                            </li>
                            @if (isAdmin)
                            {
                                <li class="nav-item me-3">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="AdminDashboard">
                                        <i class="bi bi-shield-lock"></i> Admin Dashboard
                                    </a>
                                </li>
                            }
                            <li class="nav-item me-3">
                                <a class="nav-link text-white" asp-area="" asp-controller="HomePage" asp-action="Privacy">
                                    <i class="bi bi-shield-check"></i> Privacy
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <form asp-controller="Profile" asp-action="LogOut" method="post" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link text-white" style="text-decoration:none;">
                                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
    }
</header>
<div class="container-fluid">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<footer class="mt-5 py-4" style="background-color: var(--background-dark); color: var(--text-on-dark);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-3 mb-md-0">
                <div class="d-flex align-items-center">
                    <i class="bi bi-cup-straw fs-4 me-2"></i>
                    <span class="fw-bold fs-5">IMDB Drinks</span>
                </div>
                <p class="mb-0 mt-2 text-muted small">The largest community of drink enthusiasts</p>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="mb-2">
                    <a href="#" class="text-decoration-none me-3 text-muted">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="#" class="text-decoration-none me-3 text-muted">
                        <i class="bi bi-instagram"></i>
                    </a>
                    <a href="#" class="text-decoration-none me-3 text-muted">
                        <i class="bi bi-twitter-x"></i>
                    </a>
                </div>
                <p class="mb-0 small text-muted">
                    &copy; 2025 - IMDB Drinks - <a class="text-muted" asp-area="" asp-controller="HomePage" asp-action="Privacy">Privacy Policy</a>
                </p>
            </div>
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>